<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="">
    <body>
            <block class="MageSuite\ProductTile\Block\Tile" name="product.tile">
                <arguments>
                    <argument xsi:type="object" name="cache_key_generator">MageSuite\ProductTile\Service\CacheKeyGenerator</argument>
                    <argument xsi:type="object" name="cache_key_prefix_generator">MageSuite\ProductTile\Service\CacheKeyPrefixGenerator</argument>
                    <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Model\Tile\Fragment\Stock</argument>
                    <argument xsi:type="string" name="cache_lifetime">86400</argument>
                    <argument xsi:type="string" name="html_tag">div</argument>
                    <argument xsi:type="string" name="css_class">cs-product-tile</argument>
                    <argument xsi:type="boolean" name="entire_tile_clickable">false</argument>
                    <argument xsi:type="array" name="sections">
                        <item xsi:type="array" name="navigation">
                            <item xsi:type="string" name="additional_css_classes">cs-product-tile--static</item>
                        </item>
                    </argument>
                </arguments>

                <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.tile.wrapper">
                    <arguments>
                        <argument xsi:type="string" name="html_tag">div</argument>
                        <argument xsi:type="string" name="css_class">cs-product-tile__container</argument>
                    </arguments>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.thumbnail">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-product-tile__thumbnail</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.wishlist.remove.icon" template="MageSuite_ProductTile::fragments/wishlist/remove-icon.phtml">
                            <arguments>
                                <argument name="cache_key_model" xsi:type="object">MageSuite\ProductTile\Cache\WishlistItem</argument>
                                <argument name="link_label" xsi:type="string" translate="true">Remove item</argument>
                                <argument name="link_css_class" xsi:type="string">cs-product-tile__wishlist-remove-icon</argument>
                                <argument name="supported_areas" xsi:type="array">
                                    <item name="wishlist" xsi:type="string">wishlist</item>
                                </argument>
                            </arguments>
                            <block class="MageSuite\ThemeHelpers\Block\Icon" name="product.tile.wishlist.remove.icon.image">
                                <arguments>
                                    <argument name="icon_url" xsi:type="string">images/icons/close.svg</argument>
                                    <argument name="css_class" xsi:type="string">cs-product-tile__wishlist-remove-icon-image</argument>
                                    <argument name="inlined" xsi:type="boolean">true</argument>
                                    <argument name="lazy_loaded" xsi:type="boolean">false</argument>
                                    <argument name="alt_text" xsi:type="string" translate="true">remove</argument>
                                </arguments>
                            </block>
                        </block>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.thumbnail.link" template="MageSuite_ProductTile::container_linked.phtml">
                            <arguments>
                                <argument xsi:type="string" name="css_class">cs-product-tile__thumbnail-link product-item-photo</argument>
                            </arguments>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment" ifconfig="product_tile/thumbnail_gallery/enabled" name="product.tile.gallery" template="MageSuite_ProductTile::fragments/gallery.phtml">
                                <arguments>
                                    <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Model\Tile\Fragment\Gallery\Images</argument>
                                    <argument xsi:type="string" name="tile_image_id">product_tile_gallery</argument>
                                    <argument xsi:type="string" name="tile_image_id_2x">product_tile_gallery_x2</argument>
                                    <argument xsi:type="string" name="product_image_id">category_page_grid</argument>
                                    <argument xsi:type="string" name="product_image_id_2x">category_page_grid_x2</argument>
                                    <argument xsi:type="number" name="item_limit">3</argument>
                                    <argument xsi:type="string" name="container_tag">ul</argument>
                                    <argument xsi:type="string" name="container_css_class">cs-product-tile__gallery cs-tile-gallery</argument>
                                    <argument xsi:type="string" name="wrapper_tag">li</argument>
                                    <argument xsi:type="string" name="wrapper_css_class">cs-tile-gallery__item</argument>
                                    <argument xsi:type="string" name="thumbnail_css_class">cs-tile-gallery__thumbnail</argument>
                                    <argument xsi:type="boolean" name="display_if_single">false</argument>
                                    <argument name="unsupported_areas" xsi:type="array">
                                        <item name="mini-wishlist" xsi:type="string">mini-wishlist</item>
                                    </argument>
                                </arguments>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.figure">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">figure</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__figure</argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.figure.image" template="MageSuite_ProductTile::fragments/image.phtml">
                                    <arguments>
                                        <argument xsi:type="object" name="cache_key_model">MageSuite\ProductTile\Cache\Image</argument>
                                        <argument xsi:type="string" name="css_class">cs-product-tile__image</argument>
                                        <argument xsi:type="string" name="img_class">cs-product-tile__img</argument>
                                        <argument xsi:type="boolean" name="apply_width_height_attr">true</argument>
                                        <argument name="unsupported_areas" xsi:type="array">
                                            <item name="teaser" xsi:type="string">teaser</item>
                                        </argument>
                                    </arguments>
                                </block>
                            </block>
                        </block>
                    </block>

                    <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.content" after="product.tile.container.thumbnail">
                        <arguments>
                            <argument xsi:type="string" name="html_tag">div</argument>
                            <argument xsi:type="string" name="css_class">cs-product-tile__content</argument>
                        </arguments>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.main.details">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">div</argument>
                                <argument xsi:type="string" name="css_class">cs-product-tile__main product-item-details</argument>
                            </arguments>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.swatches.container" before="-">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__swatches</argument>
                                    <argument name="unsupported_areas" xsi:type="array">
                                        <item name="wishlist" xsi:type="string">wishlist</item>
                                    </argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.swatches" template="MageSuite_ProductTile::fragments/swatches.phtml">
                                    <block class="Magento\Framework\View\Element\RendererList" name="product.tile.details.renderers" as="details.renderers">
                                        <block class="Magento\Swatches\Block\Product\Renderer\Listing\Configurable" name="product.tile.details.renderers.configurable" as="configurable" template="Magento_Swatches::product/listing/renderer.phtml" ifconfig="catalog/frontend/show_swatches_in_product_list" />
                                        <block class="Magento\Framework\View\Element\Template" name="product.tile.details.renderers.default" as="default" />
                                    </block>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.name">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__name</argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.name.link" template="MageSuite_ProductTile::container_linked.phtml">
                                    <arguments>
                                        <argument xsi:type="string" name="css_class">cs-product-tile__name-link product-item-link</argument>
                                    </arguments>
                                    <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.name" template="MageSuite_ProductTile::fragments/name.phtml" />
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.description.wrapper">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__description</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.description" template="MageSuite_ProductTile::fragments/description.phtml" />
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.price.wrapper">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__price product-info-price</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.price" template="MageSuite_ProductTile::fragments/price.phtml">
                                    <arguments>
                                        <argument xsi:type="object" name="cache_key_model">MageSuite\ProductTile\Cache\Price</argument>
                                    </arguments>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.review_summary" template="MageSuite_ProductTile::fragments/review_summary.phtml">
                                <arguments>
                                    <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Model\Tile\Fragment\Review</argument>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__review</argument>
                                </arguments>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.stock" template="MageSuite_ProductTile::fragments/stock.phtml">
                                <arguments>
                                    <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Model\Tile\Fragment\Stock</argument>
                                    <argument xsi:type="string" name="html_tag">span</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__stock</argument>
                                    <argument xsi:type="string" name="in_stock_css_modifier">cs-product-tile__stock--in</argument>
                                    <argument xsi:type="string" name="out_of_stock_css_modifier">cs-product-tile__stock--out</argument>
                                    <argument xsi:type="string" name="in_stock_label" translate="true">In stock</argument>
                                    <argument xsi:type="string" name="out_of_stock_label" translate="true">Out of stock</argument>
                                </arguments>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.addtocart" template="MageSuite_ProductTile::fragments/add-to/cart.phtml">
                                <arguments>
                                    <argument xsi:type="boolean" name="show_only_for_simple_products">false</argument>
                                    <argument xsi:type="string" name="form_class">cs-addtocart cs-product-tile__addtocart</argument>
                                    <argument xsi:type="string" name="atc_add_label" translate="true">Add to Cart</argument>
                                    <argument xsi:type="string" name="atc_configure_label" translate="true">Configure</argument>
                                    <argument xsi:type="boolean" name="show_qty_switcher">false</argument>
                                    <argument xsi:type="string" name="qty_class">cs-product-tile__qty</argument>
                                    <argument name="unsupported_areas" xsi:type="array">
                                        <item name="wishlist" xsi:type="string">wishlist</item>
                                    </argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.addtocart.button" template="Magento_Catalog::addtocart/button.phtml" as="atc.button">
                                    <arguments>
                                        <argument xsi:type="string" name="button_class">cs-addtocart__button cs-addtocart__button--on-tile cs-product-tile__addtocart-button</argument>
                                    </arguments>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.addtolinks">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">ul</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__addto cs-links-block-addto</argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addtowishlist">
                                    <arguments>
                                        <argument xsi:type="string" name="html_tag">li</argument>
                                        <argument xsi:type="string" name="css_class">cs-links-block-addto__item cs-links-block-addto__item--wishlist</argument>
                                        <argument name="unsupported_areas" xsi:type="array">
                                            <item name="wishlist" xsi:type="string">wishlist</item>
                                        </argument>
                                    </arguments>
                                    <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.addtolinks.addtowishlist" template="MageSuite_ProductTile::fragments/add-to/wishlist.phtml">
                                        <arguments>
                                            <argument xsi:type="string" name="label" translate="true">Add to Wishlist</argument>

                                        </arguments>
                                        <block class="MageSuite\ThemeHelpers\Block\Icon" name="product.tile.addtolinks.addtowishlist.icon">
                                            <arguments>
                                                <argument name="icon_url" xsi:type="string">images/icons/heart.svg</argument>
                                                <argument name="css_class" xsi:type="string">cs-links-block-addto__icon cs-links-block-addto__icon--wishlist towishlist-icon</argument>
                                                <argument name="inlined" xsi:type="boolean">true</argument>
                                                <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                                <argument name="alt_text" xsi:type="string" translate="true">wishlist</argument>
                                            </arguments>
                                        </block>
                                    </block>
                                </block>

                                <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.addtocompare">
                                    <arguments>
                                        <argument xsi:type="string" name="html_tag">li</argument>
                                        <argument xsi:type="string" name="css_class">cs-links-block-addto__item cs-links-block-addto__item--compare</argument>
                                    </arguments>
                                    <block class="MageSuite\ProductTile\Block\Tile\Fragment\AddTo\Compare" name="product.tile.addtolinks.addtocompare" template="MageSuite_ProductTile::fragments/add-to/compare.phtml">
                                        <arguments>
                                            <argument xsi:type="string" name="label" translate="true">Add to Compare</argument>
                                        </arguments>
                                        <block class="MageSuite\ThemeHelpers\Block\Icon" name="product.tile.addtolinks.addtocompare.icon">
                                            <arguments>
                                                <argument name="icon_url" xsi:type="string">images/icons/compare.svg</argument>
                                                <argument name="css_class" xsi:type="string">cs-links-block-addto__icon cs-links-block-addto__icon--compare</argument>
                                                <argument name="inlined" xsi:type="boolean">true</argument>
                                                <argument name="lazy_loaded" xsi:type="boolean">true</argument>
                                                <argument name="alt_text" xsi:type="string" translate="true">compare</argument>
                                            </arguments>
                                        </block>
                                    </block>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.badges">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">ul</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__badges</argument>
                                </arguments>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.badge.discount" template="MageSuite_ProductTile::fragments/badge.phtml">
                                    <arguments>
                                        <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Badge\Discount</argument>
                                        <argument xsi:type="string" name="wrapper_tag">li</argument>
                                        <argument xsi:type="string" name="wrapper_css_class">cs-product-tile__badge-item cs-dailydeal__badge--discount</argument>
                                        <argument xsi:type="string" name="css_class">cs-product-tile__badge cs-product-tile__badge--discount</argument>
                                        <argument xsi:type="string" name="text_css_class">cs-product-tile__badge-text</argument>
                                        <argument xsi:type="string" name="label" translate="true"></argument>
                                        <argument xsi:type="boolean" name="value_display">true</argument>
                                        <argument xsi:type="string" name="value_prefix">-</argument>
                                        <argument xsi:type="string" name="value_suffix">%</argument>
                                    </arguments>
                                </block>
                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.badge.new" template="MageSuite_ProductTile::fragments/badge.phtml">
                                    <arguments>
                                        <argument xsi:type="object" name="view_model">MageSuite\ProductTile\Block\Tile\Fragment\Badge\IsNew</argument>
                                        <argument xsi:type="string" name="html_tag">li</argument>
                                        <argument xsi:type="string" name="wrapper_css_class">cs-product-tile__badge-item</argument>
                                        <argument xsi:type="string" name="css_class">cs-product-tile__badge cs-product-tile__badge--new</argument>
                                        <argument xsi:type="string" name="text_css_class">cs-product-tile__badge-text</argument>
                                        <argument translate="true" xsi:type="string" name="label">New</argument>
                                    </arguments>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.container.wishlist.addtocart" template="MageSuite_ProductTile::fragments/wishlist/cart.phtml">
                                <arguments>
                                    <argument xsi:type="object" name="cache_key_model">MageSuite\ProductTile\Cache\WishlistItem</argument>
                                    <argument xsi:type="string" name="atc_add_label" translate="true">Add to Cart</argument>
                                    <argument xsi:type="boolean" name="show_wishlist_qty_switcher">false</argument>
                                    <argument xsi:type="string" name="wishlist_qty_class">cs-product-tile__qty</argument>
                                    <argument name="supported_areas" xsi:type="array">
                                        <item name="wishlist" xsi:type="string">wishlist</item>
                                    </argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.container.wishlist.addtocart.button" template="Magento_Catalog::addtocart/button.phtml" as="atc.button">
                                    <arguments>
                                        <argument xsi:type="string" name="button_class">cs-addtocart__button cs-product-tile__addtocart-button</argument>
                                    </arguments>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.wishlist.actions">
                                <arguments>
                                    <argument name="supported_areas" xsi:type="array">
                                        <item name="wishlist" xsi:type="string">wishlist</item>
                                    </argument>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__wishlist-actions</argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.wishlist.edit" template="MageSuite_ProductTile::fragments/wishlist/edit.phtml">
                                    <arguments>
                                        <argument name="cache_key_model" xsi:type="object">MageSuite\ProductTile\Cache\WishlistItem</argument>
                                        <argument name="link_label" xsi:type="string" translate="true">Edit</argument>
                                        <argument name="link_css_class" xsi:type="string">cs-product-tile__wishlist-action cs-product-tile__wishlist-action--edit</argument>
                                    </arguments>
                                </block>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.wishlist.remove" template="MageSuite_ProductTile::fragments/wishlist/remove.phtml">
                                    <arguments>
                                        <argument name="cache_key_model" xsi:type="object">MageSuite\ProductTile\Cache\WishlistItem</argument>
                                        <argument name="link_label" xsi:type="string" translate="true">Remove item</argument>
                                        <argument name="link_css_class" xsi:type="string">cs-product-tile__wishlist-action cs-product-tile__wishlist-action--remove</argument>
                                    </arguments>
                                </block>
                            </block>

                            <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.wishlist.comment">
                                <arguments>
                                    <argument xsi:type="string" name="html_tag">div</argument>
                                    <argument xsi:type="string" name="css_class">cs-product-tile__wishlist-comment</argument>
                                    <argument name="supported_areas" xsi:type="array">
                                        <item name="wishlist" xsi:type="string">wishlist</item>
                                    </argument>
                                </arguments>

                                <block class="MageSuite\ProductTile\Block\Tile\Fragment" name="product.tile.container.wishlist.comment.textarea" template="MageSuite_ProductTile::fragments/wishlist/comment.phtml">
                                    <arguments>
                                        <argument name="title" translate="true" xsi:type="string">Product Details and Comment</argument>
                                    </arguments>
                                </block>
                            </block>
                        </block>

                        <block class="MageSuite\ProductTile\Block\Tile\Container" name="product.tile.container.main.after">
                            <arguments>
                                <argument xsi:type="string" name="html_tag">div</argument>
                                <argument xsi:type="string" name="css_class">cs-product-tile__main-after</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
    </body>
</page>
